<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Kaushan+Script" rel="stylesheet">
  </head>
  
<body class="d-flex flex-column vh-100">
 <header>
 <nav class="navbar navbar-expand-lg navbar-light navbar-white bg-white text-black">
  <div class="container">
  <a class="navbar-brand" href="/">
   <span>NaganoCake</span>
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavDropdown">
  <ul class="navbar-nav ml-auto">

 <% if client_signed_in? %>
   <nav class="nav navbar-brand navbar-left header-logo">
    <%= link_to root_path,class:"header-logo-letter" do %>
    <% end %>
    </nav>

 <nav class="nav navbar-nav">
  <span class="client-name  login-client-name">
    ようこそ、<%= current_client.first_name %><%= current_client.last_name %>さん！
  </span>
 </nav>

  <nav>
  <%= link_to client_path(current_client.id), class: "btn btn-black text-black text-right", method: :get do %>
  <i class="fas fa-home"></i>マイページ
  <% end %>

  <%= link_to products_path, class: "btn btn-black text-black text-right", method: :get do %>
  <i class="fas fa-home"></i>商品一覧
  <% end %>

  <%= link_to inside_carts_path, class: "btn btn-black text-black text-right", method: :get do %>
  <i class="fas fa-home"></i>カート
  <% end %>

  <%= link_to destroy_client_session_path, class: "btn btn-black text-black text-right", method: :delete do %>
  <i class=""></i>ログアウト
  <% end %>

    </ul>
  </nav>

 <% elsif admin_signed_in? %>

　<div class= "admin-header">
  <div class= "admin-nav-bars">
  <nav class="nav navbar-brand navbar-left header-logo">
  <%= link_to admins_root_path,class:"header-logo-letter" do %><%= image_tag('logo.png', class: 'admin_shop_logo') %>
  <% end %>
  </nav>
  <nav class="nav navbar-nav">
      <span class="adjust">
      </span>
   </nav>

 <nav>
  <ul class="nav navbar-nav navbar-right">
 <%= link_to admins_products_path, class: "btn btn-black text-black text-right", method: :get do %>
  <i class="fas fa-home"></i>商品一覧
  <% end %>

  <%= link_to admins_clients_path, class: "btn btn-black text-black text-right", method: :get do %>
  <i class="fas fa-home"></i>会員一覧
  <% end %>

  <%= link_to admins_orders_path, class: "btn btn-black text-black text-right", method: :get do %>
  <i class="fas fa-home"></i>注文履歴一覧
  <% end %>

  <%= link_to admins_genres_path, class: "btn btn-black text-black text-right", method: :get do %>
  <i class="fas fa-home"></i>ジャンル一覧
  <% end %>

  <%= link_to destroy_admin_session_path, class: "btn btn-black text-black text-right", method: :delete do %>
  <i class="fas fa-home"></i>ログアウト
  <% end %>

      </ul>
    </nav>
  </div>

</div>

<% else %>
<nav class="nav navbar-brand navbar-left header-logo">
  <%= link_to root_path,class:"header-logo-letter" do %> <%= image_tag('logo.png', class: 'shop_logo') %><% end %>
</nav>
<nav class="nav navbar-nav">
  <span class="adjust">
  </span>
</nav>
<nav>
  <ul class="nav navbar-nav navbar-right">

 <%= link_to products_path, class: "btn btn-black text-black text-right", method: :get do %>
  <i class="fas fa-home"></i>商品一覧
  <% end %>

 <%= link_to new_client_registration_path, class: "btn btn-black text-black text-right", method: :get do %>
  <i class="fas fa-home"></i>新規登録
  <% end %>

  <%= link_to new_client_session_path, class: "btn btn-black text-black text-right", method: :get do %>
  <i class="fas fa-home"></i>ログイン
  <% end %>
  </ul>
</nav>

<% end %>
      </div>
    </header>
    <main>
      <div class="container main-container">
        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>">
            <%= message %>
          </div>
        <% end %>
    <%= yield %>
      </div>
    </main>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-5 col-xs-offset-9">
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

